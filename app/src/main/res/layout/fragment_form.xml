<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:constraints="http://schemas.android.com/apk/res-auto"
    tools:context=".FormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:id="@+id/button_container"
        android:orientation="horizontal">

        <Button
        constraints:layout_constraintTop_toTopOf="parent"
        constraints:layout_constraintStart_toStartOf="parent"
        android:id="@+id/btn_tambah_gedung"
        android:layout_width="153dp"
        android:layout_height="59dp"
            android:layout_marginHorizontal="8dp"
        android:text="@string/tambahGedung"
        />

        <Button
            constraints:layout_constraintTop_toTopOf="parent"
            constraints:layout_constraintStart_toStartOf="parent"
            android:id="@+id/btn_tambah_ruangan"
            android:layout_width="166dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="8dp"
            android:text="@string/tambahRuangan"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/linear_layout_form"
        constraints:layout_constraintTop_toBottomOf="@+id/button_container"
        android:orientation="vertical">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>